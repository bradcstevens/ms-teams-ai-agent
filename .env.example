# MS Teams AI Agent - Environment Variables Template
# Copy this file to .env and fill in the values

# =============================================================================
# Azure Configuration
# =============================================================================
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_LOCATION=eastus
AZURE_RESOURCE_GROUP=rg-teams-ai-agent

# =============================================================================
# Azure OpenAI Configuration
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# =============================================================================
# Bot Framework Configuration
# =============================================================================
BOT_APP_ID=your-bot-app-id
BOT_APP_PASSWORD=your-bot-app-password
BOT_TENANT_ID=your-tenant-id

# =============================================================================
# Application Configuration
# =============================================================================
APP_ENV=development
LOG_LEVEL=INFO
MAX_CONVERSATION_HISTORY=10

# =============================================================================
# MCP Configuration
# =============================================================================
MCP_CONFIG_PATH=./mcp_servers.json
MCP_CONNECTION_TIMEOUT=30

# =============================================================================
# Azure Resources (Set by azd during deployment)
# =============================================================================
# AZURE_CONTAINER_REGISTRY_NAME=auto-set-by-azd
# AZURE_CONTAINER_APP_NAME=auto-set-by-azd
# AZURE_KEY_VAULT_NAME=auto-set-by-azd
# APPLICATIONINSIGHTS_CONNECTION_STRING=auto-set-by-azd

# =============================================================================
# Optional: GitHub Integration (for MCP server)
# =============================================================================
# GITHUB_TOKEN=your-github-personal-access-token

# =============================================================================
# Optional: Slack Integration (for MCP server)
# =============================================================================
# SLACK_BOT_TOKEN=your-slack-bot-token
# SLACK_TEAM_ID=your-slack-team-id
