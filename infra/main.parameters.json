{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environmentName": {
      "value": "${AZURE_ENV_NAME}"
    },
    "location": {
      "value": "${AZURE_LOCATION=eastus}"
    },
    "principalId": {
      "value": "${AZURE_PRINCIPAL_ID=}"
    },
    "openAiLocation": {
      "value": "${AZURE_OPENAI_LOCATION=eastus}"
    },
    "openAiModelName": {
      "value": "${AZURE_OPENAI_MODEL_NAME=gpt-5}"
    },
    "openAiModelVersion": {
      "value": "${AZURE_OPENAI_MODEL_VERSION=2024-08-06}"
    },
    "botDisplayName": {
      "value": "${BOT_DISPLAY_NAME=AI Agent for Teams}"
    },
    "botAppId": {
      "value": "${BOT_APP_ID=}"
    },
    "botTenantId": {
      "value": "${BOT_TENANT_ID=}"
    },
    "mcpServers": {
      "value": [
        {
          "name": "brave-search",
          "command": "npx",
          "args": ["-y", "@modelcontextprotocol/server-brave-search"],
          "env": {
            "BRAVE_API_KEY": "${BRAVE_API_KEY=}"
          }
        }
      ]
    }
  }
}
